<% if @comment.present? %>
  <div class='container'>
    <% comments.each do |comment| %>
      <% if comment.id.present? %>
        <div class="border border-primary">
          <h5>店主からのコメント</h5>
          <%=safe_join(comment.content .split("\n"),tag(:br))%>
          <% if comment.owner == current_owner %>
          <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
            <%= link_to "コメント編集", edit_review_comment_path(review, comment), remote: true, class:"btn btn-outline-primary btn-sm" %>
            <%= link_to "コメント削除", review_comment_path(comment.review.id, comment.id), method: :delete, remote: true, class:"btn btn-outline-primary btn-sm" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
