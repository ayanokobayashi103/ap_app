<br><h2>登録した店舗</h2></br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>店舗名</th>
      <th>住所</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <% @owner.shops.each do |shop| %>
    <tr>
      <td><%= shop.name %></td>
      <td><%= shop.address %></td>
      <td>
        <%= link_to shop_path(shop.id), id: 'show-shop', class:"btn btn-dark btn-xs" do %>
        <i class="fas fa-eye"></i>
        <% end %>
      </td>
      <td>
        <%= link_to edit_shop_path(shop.id), id: 'edit-shop', class:"btn btn-dark btn-xs" do  %>
        <i class="fas fa-pen"></i>
        <% end %>
      </td>
      <td>
        <%= link_to shop_path(shop.id), method: :delete, data: { confirm: '本当に削除していいですか？投稿されたクチコミも削除されます' },class: "btn btn-dark btn-xs", id: 'delete-shop' do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
