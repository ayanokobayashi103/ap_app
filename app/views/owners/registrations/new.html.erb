<div class = "container">
  <div class="row col-md-6 col-md-offset-3 col-xs-12">
    <div class = "card owner-card ">
      <h4>店主新規登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control", placeholder:"名前" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"メールアドレス" %>
      </div>

      <div class="field">
        <%= f.label :company %><br />
        <%= f.text_field :company, class: "form-control", placeholder:"会社名" %>
      </div>

      <div class="field">
        <%= f.label :tel %><br />
        <%= f.text_field :tel, class: "form-control", placeholder:"ハイフンは入れないでください" %>
      </div>

      <div class="field">
        <%= f.label :postcode %><br />
        <%= f.text_field :postcode, class: "form-control", placeholder:"ハイフンは入れないでください" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"6文字以上" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"確認パスワード" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.registrations.new.sign_up'), class: "btn btn-info btn-block"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to '既に登録がお済みの方はこちらからログイン', new_owner_session_path %>
