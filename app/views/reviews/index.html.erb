<h1><%= @shop.name %>のクチコミ一覧 </h1>
<% if current_user %>
  <%= link_to 'クチコミする', new_shop_review_path, class: 'btn btn-default' %>
<% end %>

<% @shop.reviews.each do |review| %>
<p>クチコミ:<%= review.content %></p>
<p>投稿時間:<%= l review.created_at, format: :long %></p>
<p><%= link_to '詳細表示', shop_review_path(@shop.id,review.id) %></p>
  <% if user_signed_in? %>
    <% if current_user.id == review.user.id%>
      <p><%= link_to '編集する', edit_shop_review_path(@shop.id,review.id)%></p>
      <p><%= link_to '削除する', shop_review_path(@shop.id,review.id), method: :delete, data: { confirm: '本当に編集していいですか？' } %></p><br>
    <% end %>
  <% end %>
<% end %>
