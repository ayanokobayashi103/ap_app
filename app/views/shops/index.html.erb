<section id= "top" class="shop-index-top">
  <h1 id="find-shop">お店を見つける</h1>
  <div class = "container">
    <%= search_form_for @q do |f| %>
    <%= f.search_field :name_or_brand_or_address_cont, class: "form-control", placeholder: "店舗名 ブランド 住所" %>
    <%= f.submit class: "btn btn-danger" %>
    <% end %>
  </div>
</section>

<div class = "container-fluid">
  <% @shops.each do |shop| %>
  <div class = "card">
    <p>店舗名:<%= link_to shop.name, shop_path(shop.id) %></p>
    <p><%= shop.address %></p>
    <p>営業時間:<%= shop.start_dt%></p>
    <p>閉店時間:<%= shop.end_dt%></p>
  </div></p>
  <% end %>
</div>
