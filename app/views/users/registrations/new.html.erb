<div class = "container">
  <div class="row col-md-6 col-md-offset-3 col-xs-10">
    <div class = "card auth-card">
      <h4><%= t('devise.registrations.new.sign_up') %></h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <br/>
        <%= f.text_field :name, class: "form-control", placeholder:"名前" %>
      </div>

      <div class="field">
        <br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"メールアドレス" %>
      </div>

      <div class="field">
        <br/>
        <!-- <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br> -->
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"パスワード" %>
      </div>

      <div class="field">
        <br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"パスワード(確認)" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.registrations.new.sign_up'), class: "btn btn-info btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to '既に登録がお住みの方はこちら', new_user_session_path %><br>
<%= link_to '店主新規登録はこちら', new_owner_registration_path %>
